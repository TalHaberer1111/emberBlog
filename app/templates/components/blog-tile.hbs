<div class="blogEntry">
  <img src="{{blog.image}}">
   <div class="blogText">
     <h2>{{blog.title}}</h2>
      <p>Author: {{blog.author}} - {{blog.date}}</p>
        <p>{{blog.text}}</p>
   </div>
  <button {{action 'delete' blog}}>Delete</button>
    <div class="update">
      {{update-blog blog=blog update="update"}}
    </div>
  </div>
