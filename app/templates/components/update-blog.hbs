{{#if updateBlogForm}}
  <h4>Update {{blog.author}}'s blog of {{blog.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=blog.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=blog.author}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=rental.date}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=blog.image}}
        </div>

        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text" placeholder=blog.text}}
        </div>

        <button {{action 'update' blog}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateBlogForm'}}>Update</button>
{{/if}}
